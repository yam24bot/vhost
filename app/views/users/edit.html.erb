<h1>Edit profile</h1>

<%= form_for(@user, html: {multipart: true}) do |f| %>

  <%= f.label :first_name %>
  <%= f.text_field :first_name %>

  <%= f.label :last_name %>
  <%= f.text_field :last_name %>

  <%= f.label :about_me %>
  <%= f.text_field :about_me %>

  <%= f.file_field :avatar%>

  <%= f.submit "Save Change" %>

<%end%>
